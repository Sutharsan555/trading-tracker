{
    "name": "trade-tracker",
    "version": "1.0.0",
    "description": "Professional Trade Tracking Application",
    "main": "electron-main.js",
    "scripts": {
        "start": "electron .",
        "build-win": "electron-builder --win",
        "build-mac": "electron-builder --mac",
        "build-linux": "electron-builder --linux",
        "mobile:setup": "npm install @capacitor/core @capacitor/cli @capacitor/android @capacitor/ios",
        "mobile:sync": "npx cap sync",
        "mobile:copy": "Copy-Item -Path index.html,app.js,style.css -Destination www\\ -Force && npx cap copy",
        "android:add": "npx cap add android",
        "android:open": "npx cap open android",
        "android:sync": "npx cap sync android",
        "ios:add": "npx cap add ios",
        "ios:open": "npx cap open ios",
        "ios:sync": "npx cap sync ios"
    },
    "keywords": [
        "trading",
        "tracker",
        "finance"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.tradetracker.app",
        "productName": "Trade Tracker",
        "directories": {
            "output": "dist"
        },
        "files": [
            "index.html",
            "app.js",
            "style.css",
            "electron-main.js"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "icon.icns",
            "category": "public.app-category.finance"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "icon.png",
            "category": "Finance"
        }
    }
}